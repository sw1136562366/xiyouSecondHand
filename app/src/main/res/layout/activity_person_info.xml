<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/title" layout="@layout/layout_title"></include>

    <TextView
        android:id="@+id/tvBaseInfo"
        android:layout_below="@id/title"
        android:text="基本信息"
        android:textColor="@color/gray"
        android:paddingLeft="16.7dip"
        android:paddingTop="40dip"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="70dip" />

    <ScrollView
        android:layout_below="@id/tvBaseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="昵称"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvUserName"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:id="@+id/line"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSex"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvSex"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAge"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="年龄"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvAge"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSchool"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="院校名称"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvSchool"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="邮箱"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAdderes"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="收货地址"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvAddress"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPostwd"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingLeft="16.7dip"
                    android:text="邮编"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvPostwd"
                    android:paddingLeft="130dip"
                    android:paddingTop="16.7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.7dip"
                    android:background="@mipmap/sign"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#F2F2F2"></RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>