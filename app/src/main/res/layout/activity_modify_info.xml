<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/title" layout="@layout/layout_title"></include>

    <EditText
        android:id="@+id/etUserInfo"
        android:textColor="@color/black"
        android:textColorHint="#F5FFFA"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="5dip"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="20dip"
        android:layout_below="@id/title"
        android:textCursorDrawable="@drawable/edit_cursor"
        />

    <Button
        android:id="@+id/btnSaveUserInfo"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/etUserInfo"
        android:layout_alignLeft="@id/etUserInfo"
        android:layout_alignRight="@id/etUserInfo"
        android:layout_marginTop="40dip"
        android:background="@drawable/btn_common_selector"
        android:text="保存"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />


</RelativeLayout>
