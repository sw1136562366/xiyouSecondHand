<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sms_send_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <TextView
        android:id="@+id/progress_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:visibility="gone"
        android:background="#850A0A0A"/>

    <ProgressBar
        android:id="@+id/loading_progressBar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-60dp"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progressbar"/>
    <TextView
        android:id="@+id/lading_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="28dip"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="正在登录..."
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dip"
        android:text="验证手机号码"
        android:textSize="35dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_phone"
        android:hint="手机号"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="120dip"
        android:paddingLeft="30dip"
        android:inputType="number"
        android:lines="1"
        android:textCursorDrawable="@drawable/edit_cursor"/>
    <EditText
        android:id="@+id/et_code"
        android:textSize="20dp"
        android:hint="验证码"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="30dip"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="110dip"
        android:inputType="number"
        android:textCursorDrawable="@drawable/edit_cursor"
        />
    <TextView
        android:id="@+id/get_code"
        android:layout_width="120dp"
        android:layout_height="40dip"
        android:clickable="true"
        android:text="获取验证码"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="220dip"
        android:layout_marginRight="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:background="@drawable/btn_common_selector"/>

    <Button
        android:id="@+id/btnSms"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_phone"
        android:layout_alignLeft="@id/et_phone"
        android:layout_alignRight="@id/et_phone"
        android:layout_marginTop="70dip"
        android:background="@drawable/btn_common_selector"
        android:text="确 定"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>
